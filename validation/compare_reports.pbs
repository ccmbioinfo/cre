###


report_type=`basename $1 .csv | cut -d "." -f2`;
prefix1=`basename $1 .csv`;
prefix2=`basename $2 .csv`;

left="${prefix1}.uniq.pos";
right="${prefix2}.uniq.pos";
common="${prefix1}.${prefix2}.common.pos";


#set operations
sh compare_reports.sh $1 $2

#extract db entries
sh gemini_compare.sh $3 $4 $left > ${prefix1}.uniq.db.txt
sh gemini_compare.sh $3 $4 $right > ${prefix2}.uniq.db.txt
sh gemini_compare.sh $3 $4 $common > ${prefix1}.${prefix2}.common.db.txt


